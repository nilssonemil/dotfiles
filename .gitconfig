[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.aliases
[core]
  autocrlf = input
  excludesfile = ~/.gitexclude
  hooksPath = ~/.githooks
  editor = nvim
[commit]
  template = ~/.templates/git_commit_msg
  verbose = true
  gpgsign = true
[gpg]
  program = gpg
[pull]
  ff = only
[rebase]
  autosquash = true
